<% content_for :title, "Utilisateurs #{@year}" %>
<h1><%= "#{@year}" %></h1>
<p><%= @users.count %> personnes</p>

<% @workshops.each do |workshop| %>
  <h2><%= workshop %></h2>
  <table class="table">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Pr√©nom</th>
        <th>Projet</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <% project = user.project_in_workshop workshop %>
        <tr>
          <td><%= user.last_name %></td>
          <td><%= user.first_name %></td>
          <td><%= project %></td>
          <% project.notes.split('	').each do |note| %>
            <td><%= note %></td>
          <% end unless project.nil? %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>