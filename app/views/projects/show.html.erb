<div class="row">
    <div class="col-md-3">
        <h2><%= @project %></h2>
        <p><%= @project.description %></p>
        <ul class="list-unstyled">
          <% @project.users.each do |user| %>
            <li><%= link_to user, user %></li>
          <% end %>
        </ul>
        <%= link_to 'Edit', edit_project_path(@project) if can? :edit, @project %>
        <%= link_to 'Destroy', @project, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, @project %>
    </div>
    <div class="col-md-9">
        <% @features.each do |feature| %>
          <div class="col-md-3">
            <%= render partial: 'features/badge', locals: { feature: feature, inactive: !@project.has_feature?(feature) } %>
          </div>
        <% end %>
    </div>
</div>