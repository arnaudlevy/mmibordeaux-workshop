<% content_for :title, @promotion %>

<%= link_to 'Edit', edit_promotion_path(@promotion), class: 'btn btn-default' if can? :edit, @promotion %>

<p><%= @promotion.users.count %> étudiants</p>
<table class="table">
  <thead>
    <tr>
      <th>Prénom</th>
      <th>Nom</th>
      <th>Mail</th>
      <th>Projets</th>
    </tr>
  </thead>
  <tbody>
    <% @promotion.users.each do |user| %>
      <tr>
        <td><%= link_to user.first_name, user %></td>
        <td><%= link_to user.last_name, user %></td>
        <td><%= link_to user.email, user %></td>
        <td><%= link_to user.project, user.project %></td>
      </tr>
    <% end %>
  </tbody>
</table>
