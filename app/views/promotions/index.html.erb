<% content_for :title, 'Promotions' %>
<%= link_to 'New Promotion', new_promotion_path, class: 'btn btn-primary' %>
<table class="table">
  <thead>
    <tr>
      <th>Diploma year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @promotions.each do |promotion| %>
      <tr>
        <td><%= promotion.diploma_year %></td>
        <td><%= link_to 'Show', promotion %></td>
        <td><%= link_to 'Edit', edit_promotion_path(promotion) %></td>
        <td><%= link_to 'Destroy', promotion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
