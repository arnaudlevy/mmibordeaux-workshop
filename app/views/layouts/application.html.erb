                    <span class="sr-only">Masquer la navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">mmi workshop</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><%= link_to 'Groupes', groups_path %></li>
                    <li><%= link_to 'Utilisateurs', users_path %></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <%= yield %>
    </div>
