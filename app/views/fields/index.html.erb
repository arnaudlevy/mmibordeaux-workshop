<div class="row">
    <div class="col-md-10"><h1>Fields</h1></div>
    <div class="col-md-2"><%= link_to 'New', new_field_path, class: 'btn btn-primary' if can? :create, Field %></div>
</div>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Color</th>
                <th>Position</th>
                <th colspan="2"></th>
            </tr>
        </thead>

        <tbody>
            <% @fields.each do |field| %>
            <tr>
                <td><%= field.name %></td>
                <td><%= field.color %></td>
                <td><%= field.position %></td>
                <td><%= link_to 'Edit', edit_field_path(field), class: 'btn btn-default' %></td>
                <td><%= link_to 'Destroy', field, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
