<div class="col-md-offset-2">
  <% fields.each do |field| %>
    <h3><%= field %></h3>
    <div class="row">
      <% field.features.each do |feature| %>
      <div class="col-md-4">
          <%= render partial: 'features/badge', locals: { feature: feature, inactive: !project.has_feature?(feature) } %>
      </div>
      <% end %>
    </div>
  <% end %>
</div>